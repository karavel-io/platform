apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
{% for item in resources %}
{% if item.kind == "CustomResourceDefinition" %}
- crds/{{ item.metadata.name }}.yml
{% else %}
- {{ item.metadata.name }}-{{ item.kind | lower }}{{ "-" + item.metadata.namespace if "namespace" in item.metadata and item.metadata.namespace != component_namespace else "" }}.yml
{% endif %}
{% endfor %}
